
  
  {
    "compilerOptions": {
      "target": "ES5",
      "module": "ESNext", // Consider changing to "ESNext" if targeting modern browsers
      "lib": ["DOM", "ESNext"],
      "allowJs": true,
      "jsx": "react",
      "declaration": true,
      "sourceMap": true,
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "Node", // Should be "node" instead of "Node"
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src"]
  }