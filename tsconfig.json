{
    "compilerOptions": {
      "target": "ES5",
      "module": "ESNext",
      "lib": ["DOM", "ESNext"],
      "allowJs": true,
      "jsx": "react",
      "declaration": true,
      "sourceMap": true,
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "Node",
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src"]
  }
  